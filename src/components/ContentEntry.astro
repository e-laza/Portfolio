---
const { entry } = Astro.props;
const { Content } = await entry.render();
---

<article class="entry-page">
  <h1>{entry.data.title}</h1>
  {entry.data.description && <p class="entry-desc">{entry.data.description}</p>}
  <Content />
</article>

<style>
  .entry-page {
    max-width: 820px;
    display: grid;
    gap: calc(var(--u) * 2);
    font-size: 20px;
  }

  .entry-page h1 {
    font-size: clamp(32px, 3vw, 52px);
  }

  .entry-desc {
    opacity: 0.7;
  }
</style>
