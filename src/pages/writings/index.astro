---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const entries = await getCollection('writings');
---

<BaseLayout title="Writings">
  <section class="list-page">
    <h1>Writings</h1>
    <ul>
      {
        entries.map((entry) => (
          <li>
            <a href={`/writings/${entry.slug}`}>{entry.data.title}</a>
            {entry.data.description && <p>{entry.data.description}</p>}
          </li>
        ))
      }
    </ul>
  </section>
</BaseLayout>

<style>
  .list-page {
    max-width: 860px;
    display: grid;
    gap: calc(var(--u) * 2);
  }

  .list-page h1 {
    font-size: clamp(32px, 3vw, 52px);
  }

  .list-page ul {
    list-style: none;
    display: grid;
    gap: calc(var(--u) * 2);
    font-size: 20px;
  }

  .list-page p {
    opacity: 0.7;
    margin-top: calc(var(--u) * 0.5);
  }
</style>
