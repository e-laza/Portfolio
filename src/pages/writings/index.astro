    list-style: none;
    display: grid;
    gap: calc(var(--u) * 3);
    font-size: 20px;
  }

  .list-page a:hover {
    text-decoration: underline;
    text-decoration-thickness: 0.12em;
    text-underline-offset: 0.18em;
  }

  .list-page p {
    opacity: 0.7;
    margin-top: calc(var(--u) * 0.5);
    font-size: 16px;
  }
</style>
