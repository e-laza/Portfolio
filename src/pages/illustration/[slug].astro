---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ContentEntry from '../../components/ContentEntry.astro';
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';

export interface Props {
  entry: CollectionEntry<'illustrations'>;
}

export async function getStaticPaths() {
  const entries = await getCollection('illustrations');
  return entries.map((entry) => ({ params: { slug: entry.slug }, props: { entry } }));
}

const { entry } = Astro.props as Props;
---

<BaseLayout title={entry.data.title}>
  <ContentEntry entry={entry} />
</BaseLayout>
