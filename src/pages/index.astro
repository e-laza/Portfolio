---
import BaseLayout from '../layouts/BaseLayout.astro';
import LogoEye from '../components/LogoEye.astro';

const mainLinks = [
  { label: 'About me', href: '/about' },
  { label: 'Playing', href: 'https://codepen.io/ewal' },
  { label: 'Illustration', href: '/illustration' },
  { label: 'AI', href: '/ai' },
  { label: 'Writings', href: '/writings' },
];

const bottomLinks = [
  { label: 'LinkedIn', href: 'https://www.linkedin.com/in/ewa-lazar/' },
  { label: 'GitHub', href: 'https://github.com/e-laza' },
];
---

<BaseLayout title="Home" bodyClass="home" showHeader={false}>
  <div class="eyes-background" aria-hidden="true"></div>
  <section class="home">
    <div class="home-card">
      <div class="home-logo" aria-hidden="true">
        <LogoEye />
      </div>
      <h1 class="home-title">Ewa Lazar</h1>
      <p class="home-subtitle">Frontend Developer and Illustrator</p>
      <nav class="home-main">
        {
          mainLinks.map((link) => (
            <a
              class="home-link"
              href={link.href}
              target={link.href.startsWith('http') ? '_blank' : undefined}
              rel={link.href.startsWith('http') ? 'noreferrer' : undefined}
            >
              {link.label}
            </a>
          ))
        }
      </nav>
      <nav class="home-bottom">
        {
          bottomLinks.map((link) => (
            <a class="home-link" href={link.href} target="_blank" rel="noreferrer">
              {link.label}
            </a>
          ))
        }
      </nav>
    </div>
  </section>
  <script type="module" src="/src/scripts/eyes-grid.js"></script>
</BaseLayout>

<style>
  :global(body.home) {
    background: #ffffff;
    overflow: hidden;
  }

  :global(body.home .page) {
    padding-left: var(--page-pad);
    padding-right: var(--page-pad);
    padding-top: 0;
    padding-bottom: 0;
  }

  .home {
    min-height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    z-index: 1;
  }

  .eyes-background {
    position: fixed;
    inset: 0;
    z-index: 0;
    pointer-events: none;
    background: #69b8e0;
    display: none;
  }

  .home-card {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    text-align: center;
    width: 100%;
    height: auto;
    aspect-ratio: auto;
    gap: calc(var(--u) * 3);
    background: transparent;
    box-shadow: none;
    padding: 0;
  }

  .home-logo {
    display: block;
    margin-bottom: calc(var(--u) * 3);
  }

  .home-logo :global(.logo-eye__svg) {
    height: 48px;
  }

  .home-title {
    color: #f45b69 !important;
    font-size: clamp(18px, 1.6vw, 28px);
    font-weight: 700;
    letter-spacing: 0.01em;
  }

  .home-subtitle {
    color: #f45b69 !important;
    font-size: clamp(14px, 1.2vw, 18px);
    margin-top: calc(var(--u) * -3);
    margin-bottom: calc(var(--u) * 3);
  }


  .home-main {
    display: grid;
    gap: calc(var(--u) * 1.6);
    font-size: clamp(14px, 1.2vw, 18px);
    line-height: 1.05;
    letter-spacing: -0.02em;
    margin-bottom: calc(var(--u) * 4);
  }

  .home-bottom {
    display: flex;
    gap: var(--main-gap);
    font-size: clamp(12px, 1vw, 14px);
    text-transform: lowercase;
    justify-content: center;
  }

  .home-link {
    font-weight: 700;
    transition:
      transform 0.15s ease,
      opacity 0.15s ease;
  }

  .home-link:hover {
    opacity: 0.85;
    text-decoration-line: underline;
    text-decoration-color: currentColor;
    text-decoration-thickness: 0.14em;
    text-underline-offset: 0.28em;
  }

  @media (min-width: 1024px) {
    .home-card {
      width: var(--card-size);
      aspect-ratio: 1 / 1;
      padding: var(--card-pad);
      background: #f8f5ef;
      box-shadow: var(--shadow);
      gap: 0;
    }

    .home-logo {
      display: none;
      margin-bottom: 0;
    }

    .home-subtitle {
      margin-top: calc(var(--u) * -5);
    }

    .eyes-background {
      display: block;
    }
  }

  @media (--bp-phone) {
    .home-bottom {
      flex-wrap: wrap;
    }

  }
</style>
