---
import BaseLayout from '../layouts/BaseLayout.astro';

const mainLinks = [
  { label: 'About me', href: '/about' },
  { label: 'Playing', href: '#' },
  { label: 'Illustration', href: '/illustration' },
  { label: 'AI', href: '/ai' },
  { label: 'Writings', href: '/writings' },
];

const bottomLinks = [
  { label: 'LinkedIn', href: 'https://linkedin.com' },
  { label: 'GitHub', href: 'https://github.com' },
  { label: 'Behance', href: 'https://behance.net' },
];
---

<BaseLayout title="Home" bodyClass="home">
  <div class="eyes-background" aria-hidden="true"></div>
  <section class="home">
    <div class="home-card">
      <nav class="home-main">
        {
          mainLinks.map((link) => (
            <a class="home-link" href={link.href}>
              {link.label}
            </a>
          ))
        }
      </nav>
      <nav class="home-bottom">
        {
          bottomLinks.map((link) => (
            <a class="home-link" href={link.href} target="_blank" rel="noreferrer">
              {link.label}
            </a>
          ))
        }
      </nav>
    </div>
  </section>
  <script type="module" src="/src/scripts/eyes-grid.js"></script>
</BaseLayout>

<style>
  :global(body.home) {
    background: #ffffff;
  }

  .home {
    min-height: calc(100vh - 44px);
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    z-index: 1;
  }

  .eyes-background {
    position: fixed;
    inset: 0;
    z-index: 0;
    pointer-events: none;
    background: #69b8e0;
  }

  @media (max-width: 1023px) {
    .eyes-background {
      display: none;
    }
  }

  .home-card {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    text-align: center;
    width: min(100%, 520px);
    height: auto;
    aspect-ratio: auto;
    gap: calc(var(--u) * 3);
    background: transparent;
    box-shadow: none;
    padding: 0;
  }

  .home-main {
    display: grid;
    gap: var(--main-gap);
    font-size: var(--main-font);
    line-height: 1.05;
    letter-spacing: -0.02em;
  }

  .home-bottom {
    display: flex;
    gap: var(--main-gap);
    font-size: var(--bottom-font);
    text-transform: lowercase;
    justify-content: center;
  }

  .home-link {
    font-weight: 700;
    transition:
      transform 0.15s ease,
      opacity 0.15s ease;
  }

  .home-link:hover {
    transform: translateY(-2px);
    opacity: 0.85;
  }

  @media (min-width: 1024px) {
    .home-card {
      width: var(--card-size);
      aspect-ratio: 1 / 1;
      padding: var(--card-pad);
      background: #f8f5ef;
      box-shadow: var(--shadow);
      gap: 0;
    }
  }

  @media (max-width: 768px) {
    .home-bottom {
      flex-wrap: wrap;
    }
  }
</style>
