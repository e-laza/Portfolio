---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="About">
  <section class="text-page">
    <h1>About</h1>
    <p>
      This is a short placeholder about page. Share your background, approach, and recent work here.
    </p>
  </section>
</BaseLayout>

<style>
  .text-page {
    max-width: 720px;
    display: grid;
    gap: calc(var(--u) * 2);
    font-size: 20px;
  }

  .text-page h1 {
    font-size: clamp(32px, 3vw, 52px);
  }
</style>
